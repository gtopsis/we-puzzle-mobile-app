<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.gt0p.ciu196project.MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splash_bg"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.gt0p.ciu196project.MainActivity">

        <LinearLayout
            android:id="@+id/debug_player_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp" />


        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/new_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            app:fb_textSize="25sp"
            app:fb_defaultColor="@color/button_color"
            fancy:fb_focusColor="@color/button_highlight_color"
            app:fb_fontIconResource="&#xf12e;"
            fancy:fb_iconPaddingRight="15dp"
            fancy:fb_fontIconSize="25dp"
            app:fb_iconPosition="left"
            app:fb_radius="5dp"
            app:fb_text="New Game"
            app:fb_textColor="#FFFFFF"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_above="@+id/debug_player_row"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/join_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            app:fb_textSize="25sp"
            fancy:fb_defaultColor="@color/button_color"
            fancy:fb_focusColor="@color/button_highlight_color"
            app:fb_fontIconResource="&#xf0c0;"
            fancy:fb_iconPaddingRight="15dp"
            app:fb_iconPosition="left"
            app:fb_radius="5dp"
            app:fb_text="Join Game"
            app:fb_textColor="#FFFFFF"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:layout_alignTop="@+id/new_game_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/maintitle"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:id="@+id/imageView2"
            android:layout_marginTop="-20dp"
            android:scaleX="0.7"
            android:scaleY="0.7"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
